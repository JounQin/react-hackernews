{
  "name": "react-hackernews",
  "version": "0.0.1",
  "description": "HackerNews clone built with React, ReactRouter & Redux, with server-side rendering",
  "repository": "git@github.com:JounQin/react-hackernews.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env DEBUG=1stg:* babel-node server",
    "build:react:client": "webpack --config=build/react.client.babel.js --colors --progress",
    "build:react:server": "webpack --config=build/react.server.babel.js --colors --progress",
    "build:server": "webpack --config build/server.babel.js --colors --progress",
    "build:template": "mkdir -p dist/static && node build/template.js",
    "build": "rimraf dist && cross-env DEBUG=1stg:* NODE_ENV=production run-p build:react:client build:react:server build:server build:template",
    "start": "cross-env DEBUG=1stg:* NODE_ENV=production node dist/server",
    "sync:now": "bash build/sync-now.sh",
    "sync:pull": "bash build/sync-pull.sh",
    "sync:push": "bash build/sync-push.sh",
    "lint": "eslint . --ignore-path .gitignore --max-warnings=10",
    "pm2": "yarn sync:pull && cross-env PORT=8000 pm2 start --name=react-hn npm -- start",
    "prune": "yarn install --production --ignore-optional --ignore-scripts --prefer-offline --force"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ]
  },
  "eslintConfig": {
    "extends": [
      "1stg/react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "globals": {
      "__DEV__": false,
      "__SERVER__": false
    },
    "parserOptions": {
      "ecmaFeatures": {
        "legacyDecorators": true
      }
    },
    "settings": {
      "react": {
        "version": "16"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --max-warnings=10 --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "connected-react-router": "^5.0.0",
    "cross-env": "^5.2.0",
    "debug": "^4.1.0",
    "firebase": "^5.5.4",
    "history": "^4.7.2",
    "koa": "^2.5.3",
    "koa-cash": "^3.1.0-0",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-logger": "^3.2.0",
    "koa-mount": "^4.0.0",
    "koa-static-cache": "^5.1.2",
    "lodash-es": "^4.17.11",
    "lru-cache": "^4.1.3",
    "path-to-regexp": "^2.4.0",
    "react": "^16.5.2",
    "react-async-bootstrapper": "^2.1.1",
    "react-async-component": "^2.0.0",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-config": "^4.4.0-beta.2",
    "react-router-dom": "^4.3.1",
    "react-server-renderer": "^1.1.0",
    "react-transition-group": "^2.5.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "autoprefixer": "^9.2.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.19",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.4",
    "eslint": "^5.7.0",
    "eslint-config-1stg": "^3.1.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-minifier": "^3.5.20",
    "husky": "^1.1.2",
    "koa-webpack": "^5.1.0",
    "lint-staged": "^7.3.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "react-style-loader": "^2.3.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "sw-precache-webpack-plugin": "^0.11.5",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  }
}
