{
  "name": "react-hackernews",
  "version": "0.0.12",
  "description": "HackerNews clone built with React, ReactRouter & Redux, with server-side rendering",
  "repository": "git@github.com:JounQin/react-hackernews.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "build": "rimraf dist && cross-env DEBUG='1stg:*' NODE_ENV=production run-p build:react:client build:react:server build:server build:template",
    "build:react:client": "webpack --config=build/react.client.babel.js --color --progress",
    "build:react:server": "webpack --config=build/react.server.babel.js --color --progress",
    "build:server": "webpack --config build/server.babel.js --color --progress",
    "build:template": "mkdir -p dist/static && node build/template.js",
    "dev": "cross-env DEBUG='1stg:*' babel-node server",
    "lint": "run-p 'lint:*'",
    "lint:es": "eslint . --cache --max-warnings=10",
    "lint:style": "stylelint . --cache",
    "prepare": "simple-git-hooks || exit 0",
    "prune": "cross-env YARN_ENABLE_OFFLINE_MODE=1 yarn workspaces focus --production",
    "start": "cross-env DEBUG='1stg:*' NODE_ENV=production node dist/server"
  },
  "dependencies": {
    "connected-react-router": "^6.9.3",
    "core-js": "^3.33.2",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "firebase": "^8.10.1",
    "history": "^4.10.1",
    "hoist-non-react-statics": "^3.3.2",
    "koa": "^2.14.2",
    "koa-cash": "^4.1.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^5.1.1",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-static-cache": "^5.1.4",
    "lodash-es": "^4.17.21",
    "lru-cache": "^10.1.0",
    "path-to-regexp": "^6.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-loadable": "^5.5.0",
    "react-redux": "^8.1.3",
    "react-router": "^5.3.4",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.3.4",
    "react-server-renderer": "^1.2.0",
    "react-transition-group": "^4.4.5",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "serialize-javascript": "^6.0.1"
  },
  "devDependencies": {
    "@1stg/app-config": "^9.0.0",
    "@babel/node": "^7.22.19",
    "babel-loader": "^8.3.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "commitlint": "^18.4.2",
    "css-loader": "^5.2.7",
    "eslint": "^8.53.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-minifier": "^4.0.0",
    "koa-webpack": "^6.0.0",
    "lint-staged": "^13.3.0",
    "mini-css-extract-plugin": "^1.6.2",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^4.3.0",
    "prop-types": "^15.8.1",
    "pug": "^3.0.2",
    "pug-plain-loader": "^1.1.0",
    "react-style-loader": "^2.3.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^10.4.1",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.11.0",
    "sw-precache-webpack-plugin": "^1.0.0",
    "webpack": "^4.47.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "resolutions": {
    "prettier": "^2.8.8",
    "terser-webpack-plugin": "^4.2.3"
  },
  "browserslist": [
    "extends @1stg/browserslist-config"
  ],
  "commitlint": {
    "extends": "@1stg"
  },
  "eslintConfig": {
    "extends": [
      "@1stg/eslint-config/loose"
    ],
    "settings": {
      "import/resolver": {
        "babel-module": {}
      },
      "node": {
        "allowModules": [
          "lodash"
        ]
      }
    },
    "parserOptions": {
      "ecmaFeatures": {
        "legacyDecorators": true
      }
    },
    "env": {
      "browser": true
    },
    "globals": {
      "__DEV__": false,
      "__SERVER__": false
    },
    "rules": {
      "markup/markup": "off"
    },
    "overrides": [
      {
        "files": "**/store/*",
        "rules": {
          "sonarjs/no-small-switch": "off"
        }
      }
    ]
  },
  "prettier": "@1stg/prettier-config",
  "renovate": {
    "extends": [
      "1stg"
    ]
  },
  "stylelint": {
    "extends": [
      "@1stg/stylelint-config/scss/loose",
      "@1stg/stylelint-config/modules"
    ],
    "overrides": [
      {
        "files": [
          "*.scss"
        ],
        "rules": {
          "scss/at-import-no-partial-leading-underscore": null,
          "scss/load-no-partial-leading-underscore": true
        }
      }
    ]
  }
}
